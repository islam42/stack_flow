<div class="answer_area">
  <div id="answer_error_message"></div>
  
  <%= form_for answer = @question.answers.build, url:{ controller: 'answers',
               action: 'create', question_id: @question.id }, remote: true do |f| %>

    <%= f.label :content %>
    <%= f.text_area :content, rows: 10, id: 'answer_input_area', required: true %>

    <div class="col-md-3 ">
      <%= f.submit 'post answer', class: 'btn btn-primary',
                                  disabled: !user_signed_in? %>
    </div>

  <% end %>
</div>