<% if flash[:correct_status_error].nil? %>
  <% if @answer.status == true %>
    $('#answer-correct-status<%= @answer.id %>').addClass('on');
  <% else %>
    $('#answer-correct-status<%= @answer.id %>').removeClass('on');
  <% end %>
<% else %>
  alert('<%= flash[:correct_status_error] %>');
  <%= flash[:correct_status_error] = nil %>
<% end %>