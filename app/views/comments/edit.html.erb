<% provide(:title, 'Edit Comment') %>
<%= form_for @comment, url: { :controller => 'comments', :action => 'update' } do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <h3 class="center">Edit Answer</h3>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= hidden_field_tag 'question_id', @question_id %>
        <%= f.label :content %>
        <%= f.text_area :body, autofocus: true, autocomplete: "content", class: 'form-control', rows: 10 %>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-md-offset-3">
    <%= f.submit 'Update Comment', class: 'btn btn-primary' %>
  </div>
<% end %>
