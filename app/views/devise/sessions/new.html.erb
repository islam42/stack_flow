<% provide(:title, 'Login') %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
    <h2 class="center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>

      <%= f.label :password %>
      <%= link_to "(Forget password?)", new_password_path(resource_name) %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true  %>

      <% if devise_mapping.rememberable? %>
      <div class="inline-field">
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me, class: 'checkbox'%>
      </div>
      <% end %>

      <%= f.submit "Log in", class: 'btn btn-primary' %>
    <% end %>
    <span>New User?</span>
    <%= render "devise/shared/links" %>
  </div>
</div>
