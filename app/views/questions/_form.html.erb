<%= form_for question do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, autocomplete: "title",
                             class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, autofocus: true, autocomplete: "content",
                              class: 'form-control', rows: 10, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, autofocus: true, autocomplete: "tags",
                            class: 'form-control' %>
  </div>

  <div class="col-md-3">
    <%= f.submit btn_text, class: 'btn btn-primary' %>
  </div>
<% end %>