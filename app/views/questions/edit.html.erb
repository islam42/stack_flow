<% provide(:title, 'Ask a question') %>
<%= form_for @question do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h3>Edit question</h3>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, autofocus: true, autocomplete: "content", class: 'form-control', rows: 10, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :tags %>
        <%= f.text_field :tags, autofocus: true, autocomplete: "tags", class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-md-offset-2">
    <%= f.submit 'Update Question', class: 'btn btn-primary' %>
  </div>
<% end %>
